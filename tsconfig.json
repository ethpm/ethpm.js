{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "esnext",
      "es2017"
    ],
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "test/*": ["test/*"],
      "ethpm": ["src"],
      "ethpm/*": ["src/*"]
    },
	"plugins": [
      { "transform": "@zerollup/ts-transform-paths", "exclude": "*" }
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
